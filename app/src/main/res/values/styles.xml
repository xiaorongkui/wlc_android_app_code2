<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/color_white_1</item>
    </style>

    <style name="btn" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/color_white_1</item>
        <item name="android:layout_height">@dimen/y40</item>
        <item name="android:textSize">@dimen/text_size_17</item>

    </style>

    <style name="btn_blue" parent="btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/shape_btn_bule</item>
    </style>

    <!--line样式-->
    <style name="line_h">
        <item name="android:id">@id/common_line</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/y0.5</item>
        <item name="android:background">@color/textGray</item>
    </style>

    <!--line样式-->
    <style name="line_v">
        <item name="android:id">@id/common_line</item>
        <item name="android:layout_width">@dimen/y0.5</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/textGray</item>
    </style>

    <style name="progressBarHorizontal" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <!-- 这个属性就是配置进度的颜色和背景的颜色 -->
        <item name="android:progressDrawable">@drawable/progressbar_upload_bg</item>
        <item name="android:minHeight">@dimen/y2</item>
        <item name="android:maxHeight">@dimen/y2</item>
    </style>

    <style name="common_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@drawable/shape_dialog_bg</item><!--背景透明-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item><!-- 模糊 -->
    </style>
    
    <style name="text_item_name">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/textGray_3</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="text_item_content">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/color_black_2</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
    </style>


</resources>
