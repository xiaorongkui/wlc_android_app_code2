<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/back_iv"
        android:layout_width="@dimen/y50"
        android:layout_height="@dimen/y50"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/x15"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/back_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/x5"
        android:layout_toEndOf="@id/back_iv"
        android:text="@string/back"
        android:textSize="@dimen/text_size_26"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="xxxxxx门店"
        android:textSize="@dimen/text_size_30"/>

    <TextView
        android:id="@+id/message_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="@dimen/x15"
        android:layout_marginStart="@dimen/x10"
        android:text="消息"
        android:textSize="@dimen/text_size_30"/>

    <TextView
        android:id="@+id/system_manager_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/y10"
        android:layout_toStartOf="@id/message_tv"
        android:text="系统设置"
        android:textSize="@dimen/text_size_30"/>

    <TextView
        android:id="@+id/store_manager_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_toStartOf="@id/system_manager_tv"
        android:text="门店管理"
        android:textSize="@dimen/text_size_30"/>
</RelativeLayout>