<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y44"
    android:background="@color/color_black_4"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/back_iv"
        android:layout_width="@dimen/x44"
        android:layout_height="@dimen/y44"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/x36"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:text="xxxxxx门店"
        android:textColor="@color/color_white_1"
        android:textSize="@dimen/text_size_18"/>

    <ImageView
        android:id="@+id/message_iv"
        android:layout_width="@dimen/x44"
        android:layout_height="@dimen/y44"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="@dimen/x24"
        android:layout_marginStart="@dimen/x22"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher"
        android:text="消息"/>

    <TextView
        android:id="@+id/system_manager_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/y10"
        android:layout_toStartOf="@id/message_iv"
        android:text="系统设置"
        android:textSize="@dimen/text_size_30"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/store_manager_iv"
        android:layout_width="@dimen/x44"
        android:layout_height="@dimen/y44"
        android:layout_centerHorizontal="true"
        android:layout_toStartOf="@id/system_manager_tv"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher"
        android:text="门店管理"/>
</RelativeLayout>