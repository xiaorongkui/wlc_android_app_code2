<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="@color/textGray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/y100"
            android:src="@mipmap/ic_launcher"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/product_list_item_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/x10"
                android:layout_marginStart="@dimen/x10"
                android:text="商品名称商品名称"
                android:textSize="@dimen/text_size_20"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/x10"
                android:layout_marginStart="@dimen/x10"
                android:layout_marginTop="@dimen/y20">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥100000"
                    android:textSize="@dimen/text_size_20"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/minus_sign_tv"
                        android:layout_width="@dimen/y30"
                        android:layout_height="@dimen/y30"
                        android:background="@drawable/shape_circle"
                        android:gravity="center"
                        android:text="@string/minus_sign"
                        android:textSize="@dimen/text_size_20"/>

                    <TextView
                        android:id="@+id/product_amount_tv"
                        android:layout_width="@dimen/y40"
                        android:layout_height="@dimen/y30"
                        android:layout_marginStart="@dimen/x10"
                        android:background="@drawable/shape_login_out"
                        android:gravity="center"
                        android:text="0"
                        android:textSize="@dimen/text_size_20"/>

                    <TextView
                        android:id="@+id/plus_tv"
                        android:layout_width="@dimen/y30"
                        android:layout_height="@dimen/y30"
                        android:layout_marginStart="@dimen/x10"
                        android:background="@drawable/shape_circle"
                        android:gravity="center"
                        android:text="@string/plus"
                        android:textSize="@dimen/text_size_20"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>