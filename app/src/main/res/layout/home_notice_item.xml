<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="@dimen/y44"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <ImageView
        android:scaleType="fitXY"
        android:layout_width="@dimen/x44"
        android:layout_height="@dimen/y44"
        android:layout_marginStart="@dimen/x32"
        android:src="@mipmap/notice"/>

    <TextView
        android:id="@+id/notice_title_type_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x10"
        android:text="@string/notice_title"
        android:textColor="@color/color_black_2"
        android:textSize="@dimen/text_size_14"/>

    <TextView
        android:id="@+id/tv_home_header_notice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/color_black_2"
        android:textSize="@dimen/text_size_14"
        tools:text="公告标题公告标题公告标题公告标题"/>
</LinearLayout>