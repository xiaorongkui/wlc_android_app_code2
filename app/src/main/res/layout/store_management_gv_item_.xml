<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_home_item"
    app:cardCornerRadius="@dimen/x5"
    app:cardElevation="@dimen/x5"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/y28"
        android:layout_marginTop="@dimen/y32"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/gride_iv"
            android:layout_width="@dimen/x72"
            android:layout_height="@dimen/y72"
            android:src="@mipmap/store_manager_clerk"/>

        <TextView
            android:id="@+id/gride_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y24"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/color_black_2"
            android:textSize="@dimen/text_size_20"/>
    </LinearLayout>
</android.support.v7.widget.CardView>
