<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"/>
    
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品名称商品名称"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥100000"
            />

    </LinearLayout>

    <Button
        android:id="@+id/help_customer_goods_details_subtract_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"/>

    <EditText
        android:id="@+id/help_customer_goods_details_number_et"
        android:layout_width="@dimen/y30"
        android:layout_height="wrap_content"
        android:text="0"/>
    <Button
        android:id="@+id/help_customer_goods_details_add_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"/>

</LinearLayout>
