<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/common_header"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="@color/textGray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/modify_phone_num_left_tv"
                android:layout_width="0dp"
                android:layout_height="@dimen/y100"
                android:layout_margin="@dimen/x5"
                android:layout_weight="1"
                android:background="@drawable/shape_edit"
                android:gravity="center"
                android:text="@string/modify_phone"
                android:textSize="@dimen/text_size_28"/>

            <TextView
                android:id="@+id/modify_login_pwd_left_tv"
                android:layout_width="0dp"
                android:layout_height="@dimen/y100"
                android:layout_margin="@dimen/x5"
                android:layout_weight="1"
                android:background="@drawable/shape_edit"
                android:gravity="center"
                android:text="@string/modify_login_password"
                android:textSize="@dimen/text_size_28"/>
        </LinearLayout>

        <View
            android:layout_width="@dimen/y1"
            android:layout_height="match_parent"
            android:background="@color/textGray"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/modify_phone_num_right_ll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/modify_phone_num"
                            android:textSize="@dimen/text_size_26"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/x1"
                            android:background="@color/textGray"/>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/y5"
                        android:layout_marginTop="@dimen/y5"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/new_phone_num"
                            android:textSize="@dimen/text_size_20"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/x120"
                            android:background="@drawable/shape_edit">

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:layout_gravity="center_horizontal"
                                android:background="@null"
                                android:hint="@string/new_phone_num_notice"
                                android:inputType="numberDecimal"
                                android:maxLines="1"
                                android:textCursorDrawable="@null"
                                android:textSize="@dimen/text_size_20"/>
                        </RelativeLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/verification_code"
                            android:textSize="@dimen/text_size_20"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="@dimen/y5"
                            android:layout_marginStart="@dimen/x120"
                            android:layout_marginTop="@dimen/y5"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">


                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/shape_edit">

                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:background="@null"
                                    android:hint="@string/six_sms_verification_code"
                                    android:inputType="numberDecimal"
                                    android:maxLines="1"
                                    android:textCursorDrawable="@null"
                                    android:textSize="@dimen/text_size_20"/>
                            </RelativeLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/x15"
                                android:background="@drawable/shape_login_out"
                                android:padding="@dimen/x3"
                                android:text="@string/verification_code_get"
                                android:textSize="@dimen/text_size_20"/>
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/y5"
                        android:layout_marginTop="@dimen/y5"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="@dimen/y5"
                            android:layout_marginTop="@dimen/y5"
                            android:text="@string/login_pwd"
                            android:textSize="@dimen/text_size_20"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/x120"
                            android:background="@drawable/shape_edit">

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:background="@null"
                                android:hint="@string/your_login_pwd"
                                android:inputType="numberDecimal"
                                android:maxLines="1"
                                android:textCursorDrawable="@null"
                                android:textSize="@dimen/text_size_20"/>
                        </RelativeLayout>

                    </RelativeLayout>

                    <Button
                        android:id="@+id/submit_bt"
                        style="@style/btn_blue"
                        android:layout_marginBottom="@dimen/y20"
                        android:layout_marginEnd="@dimen/x15"
                        android:layout_marginStart="@dimen/x15"
                        android:layout_marginTop="@dimen/y25"
                        android:text="@string/submit"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/modify_login_pwd_right_ll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="invisible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/modify_login_password"
                        android:textSize="@dimen/text_size_26"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x1"
                        android:background="@color/textGray"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/y5"
                        android:layout_marginTop="@dimen/y5"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/new_login_pwd"
                            android:textSize="@dimen/text_size_20"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/x120"
                            android:background="@drawable/shape_edit">

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:background="@null"
                                android:hint="@string/password_notice"
                                android:inputType="numberDecimal"
                                android:maxLines="1"
                                android:textCursorDrawable="@null"
                                android:textSize="@dimen/text_size_20"/>
                        </RelativeLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/y5"
                        android:layout_marginTop="@dimen/y5"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/duplicate_password"
                            android:textSize="@dimen/text_size_20"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/x120"
                            android:background="@drawable/shape_edit">

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:background="@null"
                                android:hint="@string/duplicate_password_notice"
                                android:inputType="numberDecimal"
                                android:maxLines="1"
                                android:textCursorDrawable="@null"
                                android:textSize="@dimen/text_size_20"/>
                        </RelativeLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/y5"
                        android:layout_marginTop="@dimen/y5"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/old_login_pwd"
                            android:textSize="@dimen/text_size_20"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/x120"
                            android:background="@drawable/shape_edit">

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:background="@null"
                                android:hint="@string/your_old_login_pwd"
                                android:inputType="numberDecimal"
                                android:maxLines="1"
                                android:textCursorDrawable="@null"
                                android:textSize="@dimen/text_size_20"/>
                        </RelativeLayout>

                    </RelativeLayout>

                    <Button
                        style="@style/btn_blue"
                        android:layout_marginBottom="@dimen/y20"
                        android:layout_marginEnd="@dimen/x15"
                        android:layout_marginStart="@dimen/x15"
                        android:layout_marginTop="@dimen/y25"
                        android:text="@string/submit"/>
                </LinearLayout>
            </FrameLayout>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>